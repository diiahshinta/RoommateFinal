<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgaccount"
    tools:context="com.example.diahshintadewi.roommatefinal.AccountActivity">



    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutEmail"
            android:orientation="horizontal"
            android:layout_marginTop="240dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Email"
                android:textColorHint="#ffffff"
                android:textStyle="italic"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:hint="diahshintad@gmail.com"
                android:textSize="12dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutName"
            android:orientation="vertical"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Name"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Name"
                android:textColorHint="#ffffff"
                android:hint=""
                android:textSize="16dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayoutPassword"
            android:orientation="vertical"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Phone"
                android:textSize="14dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/Phone"
                android:textColorHint="#ffffff"
                android:hint=""
                android:textSize="16dp"/>
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appCompatEditProfile"
            android:layout_marginTop="30dp"
            android:background="@drawable/button2"
            android:textColor="#253743"
            android:text="Edit Profile"
            android:textAlignment="center"
            android:textSize="16dp"
            android:padding="10dp"
            />
        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appCompatLogout"
            android:layout_marginTop="10dp"
            android:background="@drawable/button1"
            android:textColor="#ffffff"
            android:text="Logout"
            android:textAlignment="center"
            android:textSize="16dp"
            android:padding="10dp"

            />
    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>
